{
  "name": "stackoverflow-lite",
  "version": "1.0.0",
  "description": "An app where people can ask questions and provide answers.",
  "main": "server.js",
  "scripts": {
    "build": "babel --ignore */test src -d dist/src --copy-files && cp swagger.json ./dist/ && webpack --mode production",
    "clean": "rm -rf dist",
    "client": "webpack-dev-server --mode development --open",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "dev": "concurrently \"npm run start:dev\" \"npm run client\"",
    "migrate": "psql -U postgres -d \"so-lite-dev\" -f src/models/index.sql",
    "migrate:test": "psql -U postgres -d \"so-lite-test\" -f src/models/index.sql",
    "start": "npm run build && npm run server",
    "start:dev": "nodemon ./src/server.js --exec babel-node",
    "server": "node dist/src/server.js",
    "test": "cross-env NODE_ENV=test npm run migrate:test && cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha ./src/test --require  babel-core/register --recursive --exit --timeout 20000",
    "jest-test": "jest --updateSnapshot --coverage"
  },
  "jest": {
    "collectCoverage": true,
    "setupFiles": [
      "./test/client/support/setupTests.js",
      "./test/client/support/localstorage"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      ".*": "./node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrSerious/StackOverflow-lite.git"
  },
  "author": "Tersoo Atsen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrSerious/StackOverflow-lite/issues"
  },
  "homepage": "https://github.com/mrSerious/StackOverflow-lite#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.2.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.3.0",
    "mocha": "^5.2.0",
    "parse-database-url": "^0.3.0",
    "pg": "^7.4.3",
    "popper.js": "^1.14.6",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.7",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "swagger-ui-express": "^4.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "compression-webpack-plugin": "^2.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.8",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-localstorage-mock": "^2.3.0",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "node-sass": "^4.11.0",
    "nyc": "^12.0.2",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "precss": "^4.0.0",
    "react-test-renderer": "^16.7.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "supertest": "^3.1.0",
    "uglifyjs-webpack-plugin": "^2.1.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.1.5"
  }
}
