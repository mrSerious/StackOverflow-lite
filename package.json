{
  "name": "stackoverflow-lite",
  "version": "1.0.0",
  "description": "An app where people can ask questions and provide answers.",
  "main": "server.js",
  "scripts": {
    "build": "babel src -d dist --copy-files",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "start": "node dist/server.js",
    "start:dev": "nodemon ./src/server.js --exec babel-node",
    "test": "nyc --reporter=html --reporter=text mocha ./src/test --require  babel-core/register --recursive --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrSerious/StackOverflow-lite.git"
  },
  "author": "Tersoo Atsen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrSerious/StackOverflow-lite/issues"
  },
  "homepage": "https://github.com/mrSerious/StackOverflow-lite#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "mocha": "^5.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2",
    "supertest": "^3.1.0"
  }
}
